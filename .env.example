# Example environment variables
# Copy this file to .env and fill in your values

# GitHub Configuration
# Read token: Used to fetch commits and PRs (needs repo read access)
GH_READ_TOKEN=ghp_your_read_token_here
# Write token: Optional, used to push diary to git repo (needs repo write access)
GH_WRITE_TOKEN=ghp_your_write_token_here
GH_USERNAME=your_username

# AI Configuration
# Choose your preferred AI provider
AI_PROVIDER=openai  # Options: openai, anthropic, google

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=sk-your_key_here
OPENAI_MODEL=gpt-4  # or gpt-4-turbo, gpt-3.5-turbo

# Anthropic Configuration (if using Anthropic)
ANTHROPIC_API_KEY=sk-ant-your_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022  # or other Claude models

# Google Configuration (if using Google/Gemini)
GOOGLE_API_KEY=AIza-your_key_here
GOOGLE_MODEL=gemini-2.0-flash-exp  # or gemini-1.5-pro, gemini-1.5-flash

# Obsidian Configuration
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault
OBSIDIAN_DIARY_FOLDER=Daily Notes  # Folder within vault for diary entries

# Optional: Git Repository for Obsidian Vault
# If set, diary entries will be committed and pushed to this repo using GITHUB_WRITE_TOKEN
OBSIDIAN_GIT_REPO=username/vault-repo
OBSIDIAN_GIT_BRANCH=main  # Default: main

# Optional: Date format for diary file names
# Default: YYYY-MM-DD
DATE_FORMAT=YYYY-MM-DD
